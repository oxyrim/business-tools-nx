{
  "$schema": "https://json-schema.org/schema",
  "$id": "GenerateAngularLibrary",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "domain": {
        "type": "string",
        "description": "Domain of the library",
        "$default": {
          "$source": "argv",
          "index": 1
        },
        "x-prompt": {
          "message": "What domain would you like to use?",
          "type": "list",
          "items": ["finance", "hr", "marketing", "inventory", "shared"]
        }
      }
    }
  },
  "required": ["name"]
}
